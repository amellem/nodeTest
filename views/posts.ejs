<% include partials/header.ejs %>
<div class="body-wrapper">
    <h1>Posts</h1>
    <ul id="blogList">
        <% data.forEach((item) => { %>
            <li id="blog{{item.id }}"><span class="blogTitle">Title: <%= item.title %>,</span><span class="blogBody">Body: <%= item.body %></span></li>
        <% }) %>
    </ul>
    <button id="createPostBtn">Create a post</button>
    <form id="createPost" method="POST" action="/posts">
        <label for="title">Title of post</label>
        <input type="text" name="title">
        <label for="body">Body of post</label>
        <input type="textarea" name="body">
        <input type="submit" value="Submit">
    </form>
</div>
<% include partials/footer.ejs %>